{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/everydotorg/donation",
      "dest": "/backend/everydotorg/donation"
    },
    {
      "src": "/api/(.*)",
      "dest": "/backend/$1"
    },
    {
        "src": "/assets/(.*)",
        "dest": "/frontend/dist/assets/$1"
      },
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/dist/index.html"
    }
  ]
}
