{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "backend/$1"
    },
    {
      "src": "/everydotorg/donation",
      "dest": "backend/everydotorg/donation"
    },
    {
        "handle": "filesystem"
      },
    {
      "src": "/(.*)",
      "dest": "frontend/$1"
    }
  ]
}
