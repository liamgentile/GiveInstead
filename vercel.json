{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/package.json",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/everydotorg/donation",
      "destination": "/backend/everydotorg/donation"
    },
    {
      "source": "/api/(.*)",
      "destination": "/backend/$1"
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "dest": "/frontend/index.html"
    }
  ]
}
