{
  "version": 2,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build"
    },
    {
      "src": "backend/src/main.ts",
      "use": "@vercel/node",
      "config": {
        "memory": 512
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/src/main.ts"
    },
    {
      "source": "/everydotorg/(.*)",
      "destination": "/backend/src/main.ts"
    },
    {
      "source": "/(.*\\.js|.*\\.css|.*\\.svg|.*\\.png|.*\\.jpg|.*\\.woff|.*\\.woff2|.*\\.ttf|.*\\.eot)",
      "destination": "/frontend/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/index.html"
    }
  ]
}
